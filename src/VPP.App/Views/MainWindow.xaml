<Window x:Class="VPP.App.Views.MainWindow"
        x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:VPP.App.ViewModels"
        xmlns:helix="http://helix-toolkit.org/wpf/SharpDX"
        mc:Ignorable="d"
        Title="Visual Programming Platform - Point Cloud Inspection"
        Height="800" Width="1400"
        Background="#1E1E1E"
        WindowState="Maximized">

    <Window.Resources>
        <Style x:Key="NodeStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
        
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="#333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Save" Command="{Binding SaveWorkflowCommand}" Focusable="False"
                        Background="#4CAF50" Foreground="White" Padding="12,8" Margin="0,0,10,0"/>
                <Button Content="Load" Command="{Binding LoadWorkflowCommand}" Focusable="False"
                        Background="#00BCD4" Foreground="White" Padding="12,8" Margin="0,0,10,0"/>
                <Button Content="Clear" Command="{Binding ClearWorkflowCommand}" Focusable="False"
                        Background="#F44336" Foreground="White" Padding="12,8"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Vertical Menu Bar -->
            <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#333" BorderThickness="0,0,1,0">
                <StackPanel>
                    <!-- Main Tab -->
                    <Button Command="{Binding SetActiveTabCommand}" CommandParameter="0" Style="{StaticResource MenuButtonStyle}">
                        <StackPanel>
                            <TextBlock Text="Main" FontSize="12" FontWeight="Bold"/>
                        </StackPanel>
                        <Button.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveTabIndex}" Value="0">
                                        <Setter Property="Background" Value="#2196F3"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- Inspection Tab -->
                    <Button Command="{Binding SetActiveTabCommand}" CommandParameter="1" Style="{StaticResource MenuButtonStyle}">
                        <StackPanel>
                            <TextBlock Text="Inspection" FontSize="12" FontWeight="Bold"/>
                        </StackPanel>
                        <Button.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveTabIndex}" Value="1">
                                        <Setter Property="Background" Value="#2196F3"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1">
                <!-- View 1: Node Editor + 3D Viewer (Existing) -->
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ActiveTabIndex}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Node Editor -->
                    <Border Grid.Column="0" Background="#1A1A1A" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Node Graph Editor" FontSize="14" FontWeight="Bold"
                               Foreground="White" Padding="10"/>

                    <!-- Node Graph Viewport -->
                    <Grid Grid.Row="1" x:Name="NodeGraphViewport" Background="#252525" ClipToBounds="True"
                          MouseRightButtonDown="NodeCanvas_MouseRightButtonDown"
                          MouseLeftButtonDown="NodeCanvas_MouseLeftButtonDown"
                          MouseWheel="NodeCanvas_MouseWheel"
                          MouseMove="NodeCanvas_MouseMove"
                          MouseLeftButtonUp="NodeCanvas_MouseLeftButtonUp">
                        
                        <!-- Context Menu -->
                        <Grid.ContextMenu>
                            <ContextMenu x:Name="AddNodeContextMenu" Background="#2D2D2D" Opened="AddNodeContextMenu_Opened">
                                <ContextMenu.Template>
                                    <ControlTemplate TargetType="ContextMenu">
                                        <Border Background="#2D2D2D" BorderBrush="#555" BorderThickness="1" CornerRadius="4" Padding="5">
                                            <StackPanel>
                                                <TextBox x:Name="NodeSearchBox"
                                                         Background="#1A1A1A" Foreground="White"
                                                         BorderBrush="#555" Padding="8"
                                                         Text="{Binding NodeSearchText, UpdateSourceTrigger=PropertyChanged}"
                                                         TextChanged="NodeSearchBox_TextChanged"/>
                                                <ListBox x:Name="NodeListBox"
                                                         ItemsSource="{Binding FilteredNodes}"
                                                         Background="#2D2D2D" Foreground="White"
                                                         BorderThickness="0" MaxHeight="200"
                                                         SelectionChanged="NodeListBox_SelectionChanged"
                                                         KeyDown="NodeListBox_KeyDown">
                                                    <ListBox.ItemContainerStyle>
                                                        <Style TargetType="ListBoxItem">
                                                            <Setter Property="Padding" Value="8,4"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#3D3D3D"/>
                                                                </Trigger>
                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter Property="Background" Value="#2196F3"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ListBox.ItemContainerStyle>
                                                </ListBox>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </ContextMenu.Template>
                            </ContextMenu>
                        </Grid.ContextMenu>

                        <!-- Node Canvas -->
                        <Canvas x:Name="NodeCanvas" Background="Transparent">
                            <Canvas.RenderTransform>
                                <TranslateTransform x:Name="NodeCanvasTranslateTransform" X="0" Y="0"/>
                            </Canvas.RenderTransform>

                        <!-- Connection Lines -->
                        <ItemsControl ItemsSource="{Binding Connections}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Path Stroke="#2196F3" 
                                          StrokeThickness="3"
                                          Cursor="Hand"
                                          MouseLeftButtonDown="Connection_MouseLeftButtonDown"
                                          Tag="{Binding}"
                                          Data="{Binding PathGeometry}">
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Stroke" Value="#FF5722"/>
                                                        <Setter Property="StrokeThickness" Value="4"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Temp Connection Line -->
                        <Path x:Name="TempConnectionLine" Stroke="#FF9800" StrokeThickness="2"
                              StrokeDashArray="4 2" Visibility="Collapsed"/>

                        <!-- Selection Box -->
                        <Rectangle x:Name="SelectionBox"
                                   Stroke="#2196F3"
                                   StrokeThickness="1"
                                   StrokeDashArray="4 2"
                                   Fill="#1A2196F3"
                                   Visibility="Collapsed"
                                   IsHitTestVisible="False"/>

                        <!-- Nodes -->
                        <ItemsControl ItemsSource="{Binding Nodes}" x:Name="NodesItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource NodeStyle}"
                                            BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToBorderConverter}}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Title Bar -->
                                            <Border Grid.Row="0"
                                                    Background="#2196F3"
                                                    CornerRadius="6,6,0,0" 
                                                    Padding="10,6"
                                                    Cursor="SizeAll"
                                                    MouseLeftButtonDown="NodeHeader_MouseLeftButtonDown"
                                                    MouseMove="NodeHeader_MouseMove"
                                                    MouseLeftButtonUp="NodeHeader_MouseLeftButtonUp">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                           Foreground="White" IsHitTestVisible="False"/>
                                            </Border>

                                            <!-- Ports Row -->
                                            <Grid Grid.Row="1" Margin="8,8,8,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Input Port -->
                                                <Ellipse Grid.Column="0" 
                                                         Width="12" Height="12" 
                                                         Fill="#4CAF50"
                                                         Stroke="White"
                                                         StrokeThickness="2"
                                                         VerticalAlignment="Center"
                                                         Cursor="Hand"
                                                         MouseLeftButtonDown="InputPort_MouseDown"
                                                         MouseLeftButtonUp="Port_MouseUp"
                                                         Tag="{Binding}"/>

                                                <!-- Output Port -->
                                                <Ellipse Grid.Column="2" 
                                                         Width="12" Height="12" 
                                                         Fill="#FF9800"
                                                         Stroke="White"
                                                         StrokeThickness="2"
                                                         VerticalAlignment="Center"
                                                         Cursor="Hand"
                                                         MouseLeftButtonDown="OutputPort_MouseDown"
                                                         MouseLeftButtonUp="Port_MouseUp"
                                                         Tag="{Binding}"/>
                                            </Grid>

                                            <!-- Parameters -->
                                            <Grid Grid.Row="2" Margin="8,0,8,8">
                                                <ItemsControl ItemsSource="{Binding Parameters}" 
                                                              VerticalAlignment="Top" MinHeight="20">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="Transparent" Padding="2,2" Cursor="Hand"
                                                                    MouseLeftButtonUp="ParameterRow_MouseLeftButtonUp"
                                                                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding Name}" Foreground="White" FontSize="9" FontWeight="SemiBold" Width="70"/>
                                                                    <TextBlock Text="{Binding Value}" Foreground="#888" FontSize="8" TextTrimming="CharacterEllipsis" MaxWidth="130"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                    </Grid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#333"/>

            <!-- 3D Viewer -->
            <Border Grid.Column="2" Background="#1A1A1A" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <DockPanel Grid.Column="0" LastChildFill="False" Margin="0">
                            <TextBlock Text="3D Point Cloud Visualization (Realtime)" FontSize="14" FontWeight="Bold"
                                       Foreground="White" Padding="10"/>
                        </DockPanel>

                        <!-- ROI Drawing Tools Panel -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5"
                                    Visibility="{Binding IsRoiDrawingMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="ROI Shape:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Button Content="Box" Width="60" Margin="2" Background="#4CAF50" Foreground="White" Focusable="False"
                                    Click="RoiShapeBox_Click" ToolTip="Draw 3D Box ROI"/>
                            <Button Content="Cylinder" Width="70" Margin="2" Background="#2196F3" Foreground="White" Focusable="False"
                                    Click="RoiShapeCylinder_Click" ToolTip="Draw Cylinder ROI"/>
                            <Button Content="Sphere" Width="70" Margin="2" Background="#FF9800" Foreground="White" Focusable="False"
                                    Click="RoiShapeSphere_Click" ToolTip="Draw Sphere ROI"/>
                        </StackPanel>

                        <!-- Action Buttons Panel - shown only when nodes are selected -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                            <!-- ROI Filter Toggle shown only when ROI Filter node is selected -->
                            <ToggleButton Focusable="False"
                                          Width="38"
                                          Padding="8,6"
                                          Margin="0,0,5,0"
                                          IsChecked="{Binding IsRoiFilterOn, Mode=TwoWay}"
                                          Visibility="{Binding IsRoiFilterToggleVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          ToolTip="Toggle ROI Filter ON/OFF">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Content" Value="OFF"/>
                                        <Setter Property="Background" Value="#555"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FontWeight" Value="Normal"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="2"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        TextElement.Foreground="{TemplateBinding Foreground}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Content" Value="ON"/>
                                                <Setter Property="Background" Value="#4CAF50"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                            <!-- Circle Detection Button shown only when Circle Detection node is selected -->
                            <Button Content="Detect" Focusable="False"
                                    Width="60"
                                    Padding="8,6"
                                    Margin="0,0,5,0"
                                    Background="#00BCD4" Foreground="White"
                                    Command="{Binding DetectCircleCommand}"
                                    Visibility="{Binding IsCircleDetectButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    ToolTip="Detect 2D circle in filtered point cloud"/>

                            <!-- Inspection Button shown only when Inspection node is selected -->
                            <Button Content="Inspect" Focusable="False"
                                    Width="60"
                                    Padding="8,6"
                                    Margin="0,0,5,0"
                                    Background="#FF9800" Foreground="White"
                                    Command="{Binding InspectCommand}"
                                    Visibility="{Binding IsInspectButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    ToolTip="Inspect detected circle against specifications"/>

                            <!-- Fit Camera Button -->
                            <Button Content="Fit" Width="50" Padding="8,6" Focusable="False"
                                    ToolTip="Fit camera to point cloud"
                                    Click="FitCameraButton_Click"
                                    Visibility="{Binding IsRoiDrawingMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="1" Background="#252525">
                        <Grid>
                            <helix:Viewport3DX x:Name="Viewport3D"
                                           ShowCoordinateSystem="True"
                                           ShowViewCube="True"
                                           Camera="{Binding Scene.Camera}"
                                           EffectsManager="{Binding Scene.EffectsManager}"
                                           EnableSwapChainRendering="True"
                                           MSAA="Maximum"
                                           BackgroundColor="#101014"
                                           Focusable="True"
                                           CameraRotationMode="Turntable"
                                           RotateAroundMouseDownPoint="False"
                                           PreviewKeyDown="Viewport3D_PreviewKeyDown"
                                           MouseLeftButtonDown="Viewport3D_MouseLeftButtonDown">
                            <helix:DirectionalLight3D Direction="-1,-1,-1" Color="#FFFFFF"/>
                            <helix:DirectionalLight3D Direction="1,1,1" Color="#404040"/>
                            <helix:AmbientLight3D Color="#303030"/>
                            <!-- Separate colored origin axes -->
                            <helix:LineGeometryModel3D Geometry="{Binding Scene.OriginXGeometry}" Thickness="2" Color="Red"/>
                            <helix:LineGeometryModel3D Geometry="{Binding Scene.OriginYGeometry}" Thickness="2" Color="Green"/>
                            <helix:LineGeometryModel3D Geometry="{Binding Scene.OriginZGeometry}" Thickness="2" Color="Blue"/>
                            <helix:PointGeometryModel3D x:Name="PointCloudVisual"
                                                        Geometry="{Binding Scene.PointCloudGeometry}"
                                                        Color="{Binding Scene.PointCloudColor}"
                                                        Size="{Binding Scene.PointSize, Converter={StaticResource DoubleToSizeConverter}}"/>
                            <!-- Detected Circle Points (shown in different color) -->
                            <helix:PointGeometryModel3D x:Name="DetectedCircleVisual"
                                                        Geometry="{Binding Scene.DetectedCircleGeometry}"
                                                        Color="{Binding Scene.DetectedCircleColor}"
                                                        Size="{Binding Scene.DetectedCirclePointSize, Converter={StaticResource DoubleToSizeConverter}}"/>
                            <!-- Detected Circle Outline (red circle) -->
                            <helix:LineGeometryModel3D Geometry="{Binding Scene.DetectedCircleOutlineGeometry}"
                                                      Thickness="4"
                                                      Color="Red"/>
                            <!-- Multiple Detected Circles -->
                            <helix:GroupModel3D ItemsSource="{Binding Scene.DetectedCircleModels}"/>
                            <!-- Multiple ROI Models -->
                            <helix:GroupModel3D ItemsSource="{Binding Scene.RoiModels}"/>
                            <!-- Legacy Single ROI Wireframe (fallback for compatibility) -->
                            <helix:LineGeometryModel3D Geometry="{Binding Scene.RoiWireframeGeometry}"
                                                      Thickness="3"
                                                      Color="{Binding Scene.RoiWireframeColor}"/>
                            <!-- Legacy Single ROI Center Point (fallback for compatibility) -->
                            <helix:MeshGeometryModel3D Geometry="{Binding Scene.RoiCenterPointGeometry}">
                                <helix:MeshGeometryModel3D.Material>
                                    <helix:PhongMaterial DiffuseColor="Red"/>
                                </helix:MeshGeometryModel3D.Material>
                            </helix:MeshGeometryModel3D>
                        </helix:Viewport3DX>

                        <!-- Inspection Result Overlay (shown only when Inspection node is selected) -->
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                                Background="#CC000000"
                                Padding="40,20"
                                CornerRadius="10"
                                Visibility="{Binding IsInspectButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.8"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="{Binding InspectionResult}"
                                           FontSize="36" FontWeight="Bold"
                                           Foreground="White"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           MaxWidth="600"/>
                                <Border Margin="0,15,0,0"
                                        Padding="20,10"
                                        CornerRadius="5"
                                        Background="{Binding InspectionPass, Converter={StaticResource PassFailConverter}}">
                                    <TextBlock FontSize="48" FontWeight="Black"
                                               Foreground="White"
                                               TextAlignment="Center"
                                               Text="{Binding InspectionPass, Converter={StaticResource PassFailTextConverter}}"/>
                                </Border>
                            </StackPanel>
                        </Border>
                        </Grid>
                    </Border>

                    <Border Grid.Row="2" Padding="10"
                            Background="{Binding InspectionPass, Converter={StaticResource PassFailConverter}}"
                            Visibility="{Binding IsResultPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding InspectionResult}"
                                       FontSize="14" FontWeight="Bold"
                                       Foreground="White" TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Detected Radius: " Foreground="White"/>
                                <TextBlock Text="{Binding DetectedRadius, StringFormat=F3}"
                                           Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
                </Grid>

                <!-- View 2: Inspection Results (New) -->
                <Grid Background="#1A1A1A">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ActiveTabIndex}" Value="1">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cards List -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding InspectionCards}" Margin="20">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="250" Height="180" Margin="10" CornerRadius="8" Background="#2D2D2D" BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="#555"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPass}" Value="True">
                                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsPass}" Value="False">
                                                        <Setter Property="BorderBrush" Value="#F44336"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Header -->
                                            <Border Grid.Row="0" Background="#333" CornerRadius="7,7,0,0" Padding="10">
                                                <TextBlock Text="{Binding NodeName}" FontWeight="Bold" Foreground="White"/>
                                            </Border>
                                            
                                            <!-- Content -->
                                            <StackPanel Grid.Row="1" Margin="15">
                                                <TextBlock Text="{Binding ResultMessage}" Foreground="White" TextWrapping="Wrap" FontSize="14" Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding Details}" Foreground="#AAA" TextWrapping="Wrap" FontSize="12"/>
                                            </StackPanel>
                                            
                                            <!-- Footer -->
                                            <Border Grid.Row="2" Padding="10" CornerRadius="0,0,7,7">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#333"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsPass}" Value="True">
                                                                <Setter Property="Background" Value="#1A4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsPass}" Value="False">
                                                                <Setter Property="Background" Value="#1AF44336"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding IsPass, Converter={StaticResource PassFailTextConverter}}" 
                                                           HorizontalAlignment="Center" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsPass}" Value="True">
                                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsPass}" Value="False">
                                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Overall Result Panel -->
                    <Border Grid.Column="1" Background="#252525" BorderBrush="#333" BorderThickness="1,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Execute Button -->
                            <Button Grid.Row="0" Content="Execute"
                                    Command="{Binding ExecuteAllCommand}"
                                    Margin="20,20,20,10"
                                    Height="50"
                                    FontSize="18" FontWeight="Bold"
                                    Foreground="White"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#2196F3"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#0D47A1"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsExecuteAllRunning}" Value="True">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="Background" Value="#555"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <TextBlock Grid.Row="1" Text="Final Result" FontSize="24" FontWeight="Bold" Foreground="White" Margin="20,10,20,0"/>

                            <Border Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Width="200" Height="200" CornerRadius="100">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#333"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OverallResultStatus}" Value="PASS">
                                                <Setter Property="Background" Value="#4CAF50"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding OverallResultStatus}" Value="FAIL">
                                                <Setter Property="Background" Value="#F44336"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <TextBlock Text="{Binding OverallResultStatus}"
                                           FontSize="48" FontWeight="Bold" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <!-- Statistics and Execution Time Info -->
                            <StackPanel Grid.Row="3" Margin="20">
                                <TextBlock Text="Total Inspections:" Foreground="#AAA"/>
                                <TextBlock Text="{Binding InspectionCards.Count}" Foreground="White" FontSize="18" Margin="0,0,0,15"/>

                                <TextBlock Text="Total Execution Time:" Foreground="#AAA"/>
                                <TextBlock Foreground="#4CAF50" FontSize="24" FontWeight="Bold" Margin="0,5,0,10">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding TotalExecutionTime}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TotalExecutionTime}" Value="">
                                                    <Setter Property="Text" Value="--"/>
                                                    <Setter Property="Foreground" Value="#666"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2D2D2D" Padding="10,5">
            <TextBlock Text="{Binding StatusMessage}" Foreground="White"/>
        </Border>
    </Grid>
</Window>
